@page "/"
@inject SerOHRDatabase serOHRDatabase

<TelerikMultiColumnComboBox Data="@lstGenerators"
                            @bind-Value="@intSelectedGen"
                            ValueField="@nameof(ModtblGenerator.Id)"
                            TextField="@nameof(ModtblGenerator.GenNum)"
                            Width="1000px">
    <MultiColumnComboBoxColumns>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.GenNum)" Title="Gen Num"></MultiColumnComboBoxColumn>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.GenName)" Title="Gen Name"></MultiColumnComboBoxColumn>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.Street)" Title="Street"></MultiColumnComboBoxColumn>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.City)" Title="City"></MultiColumnComboBoxColumn>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.Province)" Title="Province"></MultiColumnComboBoxColumn>
        <MultiColumnComboBoxColumn Field="@nameof(ModtblGenerator.PostalCode)" Title="PostalCode"></MultiColumnComboBoxColumn>
    </MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

<p>Selected product Id: @intSelectedGen</p>

@code {
    private List<ModtblGenerator> lstGenerators;

    private int intSelectedGen;

    protected override async Task OnInitializedAsync()
    {
        lstGenerators = await serOHRDatabase.GetAllGeneratorsAsync();
    }
}
